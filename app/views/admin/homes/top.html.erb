<h1><i class="fas fa-fan"></i>管理者トップ（投稿一覧）</h1>
<% @posts.each do |post| %>
<table>
  <tr>
    <td>
      <%= image_tag post.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
    </td>
    <td>
      【<%= post.genre.name %>】
      <%= link_to admin_post_path(post.id) do %>
        <%= post.title %>
      <% end %>
    </td>
    <td>
      【投稿者】
      <%= link_to admin_user_path(post.user.id) do %>
        <%= post.user.nickname %>
      <%end%>
    </td>
    <td>【本文】<%= post.body %></td>
    <td>（<%= post.created_at.strftime('%Y/%m/%d  %H:%M') %>）</td>
    <td><%= link_to "削除", admin_post_path(post.id), method: :delete %></td>
  </tr>
  <tr>
    <td></td>
  </tr>
  <%#= @genre.name %>

  <%# if post.post_images.attached? %>
    <%# post.post_images.each do |image| %>
      <%#= image_tag image.variant(resize: '100x100').processed %>
    <%# end %>
  <%# end %>
</table>

<% end %>